<div class="d-flex align-items-center">
  <div class="d-flex justify-content-center">
    <div class="card w-50 border border-dark bg-light">
      <div class="card-body">

        <form action="/signup" method="POST">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="name">Name</label>
              <input type="text" name="name" id='name'>
            </div>
            <div class="form-group col-md-4">
              <label for="email">Email</label>
              <input type="email" name='email' id='email'>
              <small id="emailHelp" class="form-text text-muted">This will become your username</small>
            </div>
            <div class="form-group col-md-4">
              <label for="password">Password</label>
              <input type="password" name="password" id="password">
            </div>
            <div class="form-group col-md-4">
              <label for="telephone">Telephone Number</label>
              <input type="text" name='telephone' id='telephone'>
              <small id="telephoneHelp" class="form-text text-muted">Your phone number will be shared only with matched
                profiles</small>
            </div>

            <div class="form-group col-md-4">
              <label for="role">What are you looking for</label>
              <select name="role" id="role">
                <option value="adopter">Looking to Adopt</option>
                <option value="adoptee">Looking for a Home</option>
              </select>
            </div>
            <div class="form-group col-md-4">
              <label for="age">Age</label>
              <input type="number" name='age' id='age'>
              <small id="ageHelp" class="form-text text-muted">You have to be at least 18</small>
            </div>

          </div>
          <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Sign up</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>