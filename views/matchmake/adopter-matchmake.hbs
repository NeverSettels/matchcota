<h1 class="text-center">Make some matches</h1>
<div class="row d-flex justify-content-between">
  {{#each homes as |home|}}
  <div class="card collapse show shadow-lg" style="width: 18rem;" id="Cardcollapse{{@index}}">
    <div id="carousel{{@index}}" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="card-img-top img-fluid" src="{{home.photos.[0]}}" alt="">
        </div>
        <div class="carousel-item">
          <img class="card-img-top img-fluid" src="{{home.photos.[1]}}" alt="">
        </div>
        <div class="carousel-item">
          <img class="card-img-top img-fluid" src="{{home.photos.[2]}}" alt="">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carousel{{@index}}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel{{@index}}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="card-body bg-light">
      <p class="card-text">
        <h2 class="text-center">{{home.typeHome}}</h2>
        <h3 class="text-center">{{home.location}}</h3>
        <h4 class="text-center">Yard: {{home.yard}}</h4>
        <h4 class="text-center">Children: {{home.childAge}}</h4>

        <div class="d-flex justify-content-center">
          <a class="btn btn-primary " data-toggle="collapse" href="#collapse{{@index}}" role="button"
            aria-expanded="false" aria-controls="collapse{{@index}}">
            See more
          </a>
        </div>
        <div class="collapse" id="collapse{{@index}}">
          <div class="card card-body">
            <ul class="list-group list-group-flush">
              {{#if firstPet}}
              <li class="list-group-item">This is their first pet</li>
              {{/if}}
              {{#if otherPets}}
              <li class="list-group-item">Number of other pets at home: {{home.numPets}}</li>
              {{/if}}
              <li class="list-group-item">Employment: {{home.employmentType}}</li>
              <li class="list-group-item">Lives with {{home.peopleAtHome}} other people</li>
              <li class="list-group-item">The household spends aprox {{home.freeHoursPerWeek}} hours at home per week
              </li>

            </ul>
          </div>
        </div>
      </p>
      <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-outline-danger" data-toggle="collapse"
          data-target="#Cardcollapse{{@index}}">No
          thanks</button> <a href="/acceptHome/{{home.userID}}/{{home._id}}"><button type="button"
            class="btn btn-outline-success">Like</button></a>
      </div>
    </div>
  </div>
  {{/each}}
</div>