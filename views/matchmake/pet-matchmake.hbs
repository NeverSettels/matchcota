<h1 class="text-center">Make some matches</h1>
<div class="row d-flex justify-content-between">
  {{#each pets as |pet|}}
  <div class="card collapse show shadow-lg" style="width: 18rem;" id="Cardcollapse{{@index}}">
    <div id="carousel{{@index}}" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="card-img-top img-fluid" src="{{pet.photos.[0]}}" alt="">
        </div>
        <div class="carousel-item">
          <img class="card-img-top img-fluid" src="{{pet.photos.[1]}}" alt="">
        </div>
        <div class="carousel-item">
          <img class="card-img-top img-fluid" src="{{pet.photos.[2]}}" alt="">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carousel{{@index}}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel{{@index}}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="card-body bg-light">
      <p class="card-text">
        <h5 class="text-center">{{pet.petName}}</h2>
          <h5 class="text-center">{{pet.petType}}</h2>
            <h5 class="text-center">Age: {{pet.age}}</h4>
              <h5 class="text-center">{{pet.location}}</h3>
                <h5 class="text-center">Size: {{pet.petSize}}</h4>
                  {{#if medicalNeeds}}
                  <h5 class="text-center">Medical needs: {{ifMedicalNeeds}}</h4>
                    {{/if}}
                    <div class="d-flex justify-content-center">
                      <a class="btn btn-primary " data-toggle="collapse" href="#collapse{{@index}}" role="button"
                        aria-expanded="false" aria-controls="collapse{{@index}}">
                        See more
                      </a>
                    </div>
                    <div class="collapse" id="collapse{{@index}}">
                      <div class="card card-body">
                        <ul class="list-group list-group-flush">
                          {{#each attributes as |attribute|}}
                          <li class="list-group-item">{{attribute}}</li>
                          {{/each}}
                        </ul>
                      </div>
                    </div>
      </p>
      <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-outline-danger" data-toggle="collapse"
          data-target="#Cardcollapse{{@index}}">No
          thanks</button> <a href="/acceptPet/{{pet.userID}}/{{pet._id}}"><button type="button"
            class="btn btn-outline-success">Like</button></a>
      </div>
    </div>
  </div>
  {{/each}}
</div>